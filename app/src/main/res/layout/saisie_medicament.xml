<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <Button
        android:id="@+id/btAnnuler"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textView9"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="-50dp"
        android:text="Annuler" />


    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/textView6"
        android:layout_alignBottom="@+id/edPrix"
        android:layout_marginEnd="7dp"
        android:layout_marginBottom="14dp"
        android:text="Prix"
        android:textSize="18sp" />

    <Button
        android:id="@+id/btAjouter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/edIdMedicament"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="-64dp"
        android:text="Ajouter" />

    <EditText
        android:id="@+id/edPrix"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/edIdMedicament"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="-2dp"
        android:layout_marginBottom="0dp"
        android:ems="10"
        android:inputType="textPersonName" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="37dp"
        android:layout_toEndOf="@+id/textView6"
        android:text="Saisie d'un Medicament"
        android:textSize="24sp"
        android:textStyle="normal|bold" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/edNomCommercial"
        android:layout_marginBottom="11dp"
        android:text="Nom Commercial"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/edNomCommercial"
        android:layout_alignEnd="@+id/textView6"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="32dp"
        android:text="Id Famille"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/edIdMedicament"
        android:layout_alignEnd="@+id/textView9"
        android:layout_alignBottom="@+id/edIdMedicament"
        android:layout_marginEnd="-2dp"
        android:layout_marginBottom="10dp"
        android:text="Id Medicament"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/edIdFamille"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView9"
        android:layout_alignBottom="@+id/textView9"
        android:layout_marginStart="23dp"
        android:layout_marginBottom="-33dp"
        android:layout_toEndOf="@+id/textView9"
        android:ems="10"
        android:inputType="numberDecimal" />

    <EditText
        android:id="@+id/edIdMedicament"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/edIdFamille"
        android:layout_alignStart="@+id/edIdFamille"
        android:layout_marginStart="3dp"
        android:layout_marginBottom="26dp"
        android:ems="10"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/edNomCommercial"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/edPrix"
        android:layout_alignStart="@+id/edIdFamille"
        android:layout_marginStart="-1dp"
        android:layout_marginBottom="15dp"
        android:ems="10"
        android:inputType="date" />


</RelativeLayout>
